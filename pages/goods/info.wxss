.yx-goods-info {
  padding-top: 130rpx;
  padding-bottom: 40rpx;
}

.yx-goods-info swiper {
  position: relative;
  margin-bottom: 90rpx;
  height: 640rpx;
}

swiper image {
  display: block;
  margin: 0 auto;
  width: 334rpx;
  height: 640rpx;
  cursor: pointer;
}

swiper .arrow {
  width: 60rpx;
  height: 60rpx;
}

swiper .prev {
  position: absolute;
  left: 54rpx;
  top: 50%;
  transform: translate(0, -50%);
  cursor: pointer;
}

swiper .next {
  position: absolute;
  right: 54rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.yx-goods-info .goods-content {
  margin: 0 54rpx 40rpx;
  padding: 38rpx 68rpx 60rpx;
  border-radius: 80rpx;
  box-shadow: 0 2rpx 6rpx 4rpx rgba(0, 0, 0, 0.09);
  background-color: #fff;
}

.goods-content .content-title {
  margin-bottom: 42rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 1.8rpx;
  text-align: center;
  color: #000;
}

.goods-content .content-info {
  margin-bottom: 64rpx;
  height: 90rpx;
  padding: 0 62rpx;
}

.content-info .content-price {
  flex-direction: column;
}

.content-price .price-now {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1.8rpx;
  text-align: center;
  color: #f55a23;
}

.content-price .price-before {
  text-decoration: line-through;
  font-size: 26rpx;
  letter-spacing: 1.4rpx;
  text-align: center;
  color: #000;
}

.content-info .content-line {
  width: 2rpx;
  height: 90rpx;
  border-left: solid 2rpx #979797;
}

.content-info .content-num {
  flex-direction: column;
  font-size: 26rpx;
  letter-spacing: 1.4rpx;
  text-align: center;
  color: #000;
}

.content-info .content-num text {
  font-size: 26rpx;
}

.goods-content .content-des {
  margin-bottom: 44rpx;
  font-size: 26rpx;
  letter-spacing: 1.8rpx;
  color: #000;
}

.goods-content .content-btn {
  width: 396rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 46rpx;
}

.btn-info:first-child{margin-right: 100rpx;}
